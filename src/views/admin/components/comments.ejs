<div class="admin-comments">
  total:
  <%= post.commentsCount %>
  <% if (pageCount > 1) { %>
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <% for ( var i = 1; i <= pageCount; i++ ) { %>
      <li class="<%= page == i ? 'active' : '' %>">
        <a href="<%= next %>?p=<%= i %>">
          <%= i %>
        </a>
      </li>
      <% } %>
    </ul>
  </nav>
  <% } %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>发布者</th>
        <th>发布时间</th>
        <th>文章id</th>
        <th>内容</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% comments.forEach(function (comment) { %>
      <tr>
        <td>
          <%= comment.author.name %>
        </td>
        <td>
          <%= comment.ct %>
        </td>
        <td>
          <%= comment.postId %>
        </td>
        <td>
          <%= comment.content.slice(0, 50) %>
        </td>
        <td>
          <a class="btn btn-danger" href="/admin/comments/<%= comment._id %>/delete?next=<%= next %>&p=<%= page %>">
            删除
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
